{
  "name": "flashfuzz",
  "displayName": "FlashFuzz",
  "version": "1.0.0",
  "description": "Rapid URL fuzzing & secret scanning, right in your browser",
  "author": "Adem Kouki <ademkingnew@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "dev:verbose": "plasmo dev --verbose",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build",
    "build:source": "plasmo build --source-maps",
    "build:chrome": "plasmo build --target=chrome-mv3 --zip",
    "build:firefox": "plasmo build --target=firefox-mv3 --zip --source-maps",
    "package": "plasmo package",
    "build:all": "pnpm run build:chrome && pnpm run build:firefox"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}